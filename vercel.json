{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static",
            "config": {
                "zeroConfig": true
            }
        }
    ],
    "functions": {
        "server.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/admin",
            "dest": "/admin-view.html"
        },
        {
            "src": "/order",
            "dest": "/order-submit.html"
        },
        {
            "src": "/",
            "dest": "/public-view.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/ws",
            "dest": "https://greatgriftoff-websocket-production.up.railway.app/ws",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type",
                "Upgrade": "websocket",
                "Connection": "Upgrade",
                "Sec-WebSocket-Version": "13",
                "Sec-WebSocket-Key": "$http_sec_websocket_key"
            }
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 