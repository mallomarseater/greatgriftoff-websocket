{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/ws",
            "dest": "server.js"
        },
        {
            "src": "/admin",
            "dest": "/public/admin-view.html"
        },
        {
            "src": "/order",
            "dest": "/public/order-submit.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/",
            "dest": "/public/public-view.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 